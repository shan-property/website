@font-face {
	font-family: 'Inter';
	src: url('font/Inter-VariableFont_slnt,wght.ttf');
}

@font-face {
	font-family: 'Josefin Sans';
	font-style: normal;
	src: url('font/JosefinSans-VariableFont_wght.ttf');
}

/* Write your global styles here, in PostCSS syntax */
@tailwind base;
@tailwind components;
@tailwind utilities;

@layer base {
	/* Following this to use CSS Variables w/ opacity modifier syntax:
	https://tailwindcss.com/docs/customizing-colors#using-css-variables */
	:root {
		--text-dark: 240 22% 6.1%;
		--text-light: 240 100% 98.4%;
		--background-light: 240 22% 98.4%;
		--background-dark: 240 12.2% 8%;
		--primary-light: 240 67.2% 52.2%;
		--primary-dark: 240 67.2% 47.8%;
		--secondary-light: 240 12% 85%;
		--secondary-dark: 240 9.1% 12.9%;
		--accent-light: 193 8.8% 60%;
		--accent-dark: 193 8.8% 40%;

		--text: var(--text-dark);
		--text-variant: var(--text-light);
		--background: var(--background-light);
		--primary: var(--primary-light);
		--primary-variant: var(--primary-dark);
		--secondary: var(--secondary-light);
		--secondary-variant: var(--secondary-dark);
		--accent: var(--accent-dark);
		--accent-variant: var(--accent-light);

		--tailwind-timing: cubic-bezier(0.4, 0, 0.2, 1);
	}
	.dark {
		--text-light: 240 30% 97%;
		--secondary-light: 240 5% 80%;
		--accent-dark: 194 8.9% 46.1%;

		--text: var(--text-light);
		--text-variant: var(--text-dark);
		--background: var(--background-dark);
		--primary: var(--primary-dark);
		--primary-variant: var(--primary-light);
		--secondary: var(--secondary-dark);
		--secondary-variant: var(--secondary-light);
		--accent: var(--accent-light);
		--accent-variant: var(--accent-dark);
	}

	body {
		@apply bg-background font-sans text-text;
	}
}

@layer components {
	.transition-navbar-bg-text {
		transition:
			font-weight 0 var(--tailwind-timing),
			line-height 0 var(--tailwind-timing),
			color 0 cubic-bezier(0, 2, 0.4, 1);
		@apply duration-150;
	}
}
